<html>
 <body>
  	
	<div class="hero-unit">
	
	 

		<h2>Recipes for Kids</h2>
		 
  
		<%= will_paginate @recipes %>
			<table class="table"> 
 	<%@recipes.each do |recipe|%>
          		 		 
 	<tr>	
	<th class="text-error">
		<h3><%=recipe.title%></h3></th></tr> 
	 	 
	<tr> 
		<td> <%=simple_format(word_wrap(recipe.content,:line_width=>400))%> </td></tr>
		
		<tr>
			 <th>
				Posted By:<th><td> <%=recipe.member_username%>
			</td>
		</tr>

		<tr> 
		 <th>
				 Last Updated on <th><td><%=recipe.updated_at.strftime("%B %e %Y") %>
			</td>
		</tr>
		
 		<%end%>
	</table>
 				<%= will_paginate @recipes %>
 					 
 
	
 
	
	</body>
	  

	
</html>
 

 
