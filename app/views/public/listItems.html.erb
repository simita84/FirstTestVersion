<html>

<body>
 
<div class="hero-unit">
<div class="container">
		<div class="span2">
			<h4> All Items  </h4>
			
			<table class='table'> 
 	<%@allItems.each do |item|%>
          		 		 
 	<tr>	
<td><%=item.name%>
	</td></tr>
		</table>
		<%end%>	
	 	</div>
	 	<div class="span9">
 
<h1>Latest Items for Sale  </h1>
  
	<br>
		<%= will_paginate @items %>
	
<table class="table">
 
	<%@items.each do |item|%> 	 
	    
	
	<tr>
			<td> 
				<div class="text-error">
				 <h2><%=item.name%></h2></div>
