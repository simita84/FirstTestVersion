<html>

<body>
 

	
	<div class="hero-unit">
 
<div class="category list">
  <h2>Event List</h2><br>


<%= link_to("Back", {:controller => 'member', :action => 'index'}, :class => 'btn') %> <br>
<br>

 <div><%= pluralize(@upcoming_events_arr.size, 'Upcoming event') %>  </div>


  <table class="table">
    <tr>
      <th>Event Name</th>
      <th>Event Address</th>
      <th>When </th>
      <th>Duration</th>
      <th>Actions</th>
    </tr>
    <% @upcoming_events_arr.each do |event| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%=raw event.name %></td>
      <td><%= event.address %></td>
      <td><%= event.datetime %></td>
     <td><%= event.duration %></td>
      <td class="actions">
        <%= link_to("Evite", {:controller => 'events_members',:action => 'eventdetails', :event_id => event.id }) %>
      </td>
    </tr>
    <% end %>
  </table>
</div>


<br>

 <div><%= pluralize(@past_events_arr.size, 'Past event') %> </div>


  <table class="table">
    <tr class="header">
      <th>Name</th>
      <th>Address</th>
      <th>When </th>
      <th>Duration</th>
      <th>Actions</th>
    </tr>
    <% @past_events_arr.each do |event| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%=raw event.name %></td>
      <td><%= event.address %></td>
      <td><%= event.datetime %></td>
     <td><%= event.duration %></td>
      <td class="actions">
        <%= link_to("Event Details", {:controller => 'member',:action => 'eventDetails', :event_id =>event.id }) %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
</body>
</html>